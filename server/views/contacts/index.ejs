<%- include ../partials/head.ejs %>
<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <h1><%= title %></h1>

            <a href="/contact-list/add" class="btn btn-primary">
                <i class="fas fa-plus-circle"> Add a Contact</i></a>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr>
                    <th class="text-center">First Name</th>
                    <th class="text-center">Last Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < contactList.length; count++) { %>
                <tr>
                    <td class="text-center"><%= contactList[count].firstName %></td>
                    <td class="text-center"><%= contactList[count].lastName %></td>
                    <td class="text-center"><%= contactList[count].contactNumber %></td>
                    <td class="text-center">
                        <a href="/contact-list/edit/<%= contactList[count]._id %>" 
                            class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
                    </td>
                    <td class="text-center">
                        <a href="/contact-list/delete/<%= contactList[count]._id %>"
                        class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>


<!-- Bottom components -->
<%- include ../partials/scripts.ejs %>
<%- include ../partials/footer.ejs %>
<%- include ../partials/bottom.ejs %>